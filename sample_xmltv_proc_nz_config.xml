<?xml version="1.0" encoding="UTF-8"?>
<CONFIG>
  <HELP>Configuration data for xmtv-proc-nz.</HELP>
  <TMDB>
    <HELP>You will need an API key for TMDB.</HELP>
    <API_KEY>YourKeyHere</API_KEY>
  </TMDB>
  <TVDB>
    <HELP>Your API key for TVDB.</HELP>
    <API_KEY>YourKeyHere</API_KEY>
  </TVDB>
  <MOVIES>
    <HELP>Configuration for the movie parser. These are shows with the movie category, or that are longer than 90 minutes and shorter than 4 hours.</HELP>
    <EXCLUDE_CHANNELS>
      <HELP>There are no movies on these channels</HELP>
      <CHANNEL>rnz-national.freeviewnz.tv</CHANNEL>
      <CHANNEL>rnz-concert.freeviewnz.tv</CHANNEL>
      <CHANNEL>basefm.freeviewnz.tv</CHANNEL>
      <CHANNEL>edge-tv.freeviewnz.tv</CHANNEL>
      <CHANNEL>parliament.freeviewnz.tv</CHANNEL>
      <CHANNEL>shopping-channel.freeviewnz.tv</CHANNEL>
      <CHANNEL>yesshop.freeviewnz.tv</CHANNEL>
      <CHANNEL>tvsn.freeviewnz.tv</CHANNEL>
      <CHANNEL>firstlight.freeviewnz.tv</CHANNEL>
    </EXCLUDE_CHANNELS>
    <EXCLUDE_STRINGS>
      <HELP>Regular expressions matching the show title will abort movie lookup for that title.</HELP>
      <STRING>Movie</STRING>
      <STRING>Infomercial</STRING>
      <STRING>Breakfast</STRING>
    </EXCLUDE_STRINGS>
  </MOVIES>
  <EPISODES>
    <HELP>Configuration for TV shows that aren't movies. (TVDB)</HELP>
    <EXCLUDE_CHANNELS>
      <HELP>There is no TV on these channels</HELP>
      <CHANNEL>rnz-national.freeviewnz.tv</CHANNEL>
      <CHANNEL>rnz-concert.freeviewnz.tv</CHANNEL>
      <CHANNEL>basefm.freeviewnz.tv</CHANNEL>
      <CHANNEL>edge-tv.freeviewnz.tv</CHANNEL>
      <CHANNEL>parliament.freeviewnz.tv</CHANNEL>
      <CHANNEL>shopping-channel.freeviewnz.tv</CHANNEL>
      <CHANNEL>yesshop.freeviewnz.tv</CHANNEL>
      <CHANNEL>tvsn.freeviewnz.tv</CHANNEL>
    </EXCLUDE_CHANNELS>
    <EXCLUDE_STRINGS>
      <HELP>Regular expressions matching the show title will abort TV lookup for that title.</HELP>
      <STRING>Infomercial</STRING>
    </EXCLUDE_STRINGS>
  </EPISODES>
  <REPLACE_TITLE>
    <HELP>For each search expression, if the show description contains this description, and this description is present, replace the expression in the title with the replacement string and add the categories</HELP>
    <SEARCH>
      <TITLE>Prime Flicks: </TITLE>
      <DESC></DESC>
      <REPLACEMENT></REPLACEMENT>
      <CATEGORIES>
        <CATEGORY>Movie</CATEGORY>
      </CATEGORIES>
    </SEARCH>
    <SEARCH>
      <TITLE>^Prime (?!News)</TITLE>
      <DESC></DESC>
      <REPLACEMENT></REPLACEMENT>
      <CATEGORIES>
        <CATEGORY></CATEGORY>
      </CATEGORIES>
    </SEARCH>
    <SEARCH>
      <TITLE>Rugby: </TITLE>
      <DESC></DESC>
      <REPLACEMENT></REPLACEMENT>
      <CATEGORIES>
        <CATEGORY>Sports</CATEGORY>
        <CATEGORY>Rugby</CATEGORY>
      </CATEGORIES>
    </SEARCH>
    <SEARCH>
      <TITLE>Movie: </TITLE>
      <DESC></DESC>
      <REPLACEMENT></REPLACEMENT>
      <CATEGORIES>
        <CATEGORY>Movie</CATEGORY>
      </CATEGORIES>
    </SEARCH>
  </REPLACE_TITLE>
  <CATEGORIES>
    <HELP>If the show title contains this title replace the existing categories with these.</HELP>
    <SEARCH>
      <TITLE>The Simpsons</TITLE>
      <CATEGORIES>
        <CATEGORY>Animation</CATEGORY>
        <CATEGORY>Comedy</CATEGORY>
      </CATEGORIES>
    </SEARCH>
  </CATEGORIES>
</CONFIG>
